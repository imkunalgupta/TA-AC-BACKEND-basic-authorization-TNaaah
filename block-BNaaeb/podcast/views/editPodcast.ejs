<%- include('partials/header') -%>
<h1 class="page-title">Edit Podcast</h1>
<form class="form" method="POST" action="/podcasts/<%= podcast.id %>">
  <div>
    <label for="title">Title :</label>
    <input
      type="text"
      id="title"
      name="name"
      placeholder="Enter podcast title"
      value="<%= podcast.name %>"
    />
  </div>

  <div>
    <label for="createdBy">Created By :</label>
    <input
      type="text"
      id="createdBy"
      name="createdBy"
      value="<%= podcast.createdBy.name %>"
      disabled
    />
  </div>

  <div>
    <label for="podcastType">Podcast Type :</label>
    <select id="podcastType" name="podcastType">
      <option value="free">Free</option>
      <option value="VIP">VIP</option>
      <option value="premium">Premium</option>
    </select>
  </div>

  <div>
    <label>Approved :</label>
    <input type="radio" id="true" name="isApproved" value="true" <%=
    podcast.isApproved ? 'checked' : '' %> />
    <label for="true">True</label>
    <input type="radio" id="false" name="isApproved" value="false" <%=
    !podcast.isApproved ? 'checked' : '' %>/>
    <label for="false">False</label>
  </div>

  <input type="submit" value="Submit" class="btn" />
</form>
<%- include('partials/footer') -%>
